#include <stdio.h>
int main() {
    char a, b, c;
    printf("Zadajte znak:");
    scanf("%c", &a);
    scanf("%c", &b);
    scanf("%c", &c);
    
    if ((a >= 65) && (a <= 90)) {
        a += 32;
        
        printf("Zmeneny znak: %c \n", a);
    }

    else if ((a >= 97) && (a <= 122)) {
        a -= 32;

        printf("Zmeneny znak: %c \n", a);
    }
    else printf("Nezadal si pismeno! \n");

    if ((b >= 65) && (b <= 90)) {
        b += 32;


        printf("Zmeneny znak: %c \n", b);
    }

    else if ((b >= 97) && (b <= 122)) {
        b -= 32;

        printf("Zmeneny znak: %c \n", b);
    }
    else printf("Nezadal si pismeno! \n");

    
    if ((c >= 65) && (c <= 90)) {
        c += 32;


        printf("Zmeneny znak: %c \n", c);
    }

    else if ((c >= 97) && (c <= 122)) {
        c -= 32;

        printf("Zmeneny znak: %c \n", c);
    }
    else printf("Nezadal si pismeno! \n");
        
  return 0;
}
